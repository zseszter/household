<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zsubori.household">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.PostsActivity"
            android:label="@string/title_activity_posts"
            android:parentActivityName=".BaseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zsubori.household.BaseActivity" />
        </activity>

        <activity
            android:name=".activities.TodoActivity"
            android:label="@string/title_activity_todo" />
        <activity
            android:name=".activities.ProgramActivity"
            android:label="@string/title_activity_program" />

        <activity
            android:name=".activities.LunchActivity"
            android:label="@string/title_activity_lunch"></activity>
    </application>

</manifest>